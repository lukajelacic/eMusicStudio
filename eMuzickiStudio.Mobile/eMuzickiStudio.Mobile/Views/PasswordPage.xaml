<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:vm="clr-namespace:eMuzickiStudio.Mobile.ViewModels"
             x:Class="eMuzickiStudio.Mobile.Views.PasswordPage">
    
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Promjena passworda"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Unesi trenutni password"></Label>
            <Entry x:Name="OldPassword"  IsPassword="True"></Entry>

            <Label Text="Unesi novi password"></Label>
            <Entry x:Name="NewPassword" IsPassword="True"></Entry>

            <Label Text="Unesi opet novi password"></Label>
            <Entry x:Name="ConfirmPassword"  IsPassword="True"></Entry>
            <Button Clicked="Button_Clicked" Text="Promjeni password" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>